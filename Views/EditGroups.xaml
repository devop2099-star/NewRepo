<UserControl x:Class="Naviguard.Views.EditGroups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Naviguard.Views"
             xmlns:vm="clr-namespace:Naviguard.ViewModels"
             xmlns:converters="clr-namespace:Naviguard.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.DataContext>
        <vm:EditGroupsViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" Invert="True"/>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="280"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1.5*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="30" Padding="20" Effect="{DynamicResource ShadowEffect}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
                    <TextBlock Text="Grupos" FontSize="16" FontWeight="SemiBold" Foreground="#4A5568" VerticalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding IsEditingPages}" Style="{StaticResource ToggleSwitchStyle}" Margin="15,0"/>
                    <TextBlock Text="Páginas" FontSize="16" FontWeight="SemiBold" Foreground="#4A5568" VerticalAlignment="Center"/>
                </StackPanel>

                <Grid Visibility="{Binding IsEditingPages, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Grupos Existentes" FontSize="18" FontWeight="Bold" Foreground="#1C1E21" Margin="0,5,0,10"/>
                        <TextBox DockPanel.Dock="Top" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Tag="Buscar grupo..." Style="{StaticResource RoundedTextBoxStyle}" Padding="5" Margin="0,0,0,10"/>

                        <ListBox x:Name="GroupsListBox" ItemsSource="{Binding FilteredGroups}" SelectedItem="{Binding SelectedGroup}" BorderThickness="0" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" Tag="{Binding DataContext, ElementName=GroupsListBox}">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Eliminar Grupo" 
                                                          Command="{Binding PlacementTarget.Tag.DeleteGroupCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding}"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <TextBlock Text="{Binding group_name}" Padding="8,5" FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>

                <Grid Visibility="{Binding IsEditingPages, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Páginas Existentes" FontSize="18" FontWeight="Bold" Foreground="#1C1E21" Margin="0,5,0,10"/>
                        <TextBox DockPanel.Dock="Top" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Tag="Buscar página..." Style="{StaticResource RoundedTextBoxStyle}" Padding="5" Margin="0,0,0,10"/>

                        <ListBox x:Name="PagesListBox" ItemsSource="{Binding FilteredPages}" SelectedItem="{Binding SelectedPage}" BorderThickness="0" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent" Tag="{Binding DataContext, ElementName=PagesListBox}">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Eliminar Página"
                                                          Command="{Binding PlacementTarget.Tag.DeletePageCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding}"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <TextBlock Text="{Binding page_name}" Padding="8,5" FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>
            </DockPanel>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="30" Padding="20" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Grid Visibility="{Binding IsGroupSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <TextBlock Text="Editar Grupo" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1C1E21"/>
                            <TextBlock Text="Nombre del Grupo:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditGroupName, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"/>
                            <TextBlock Text="Descripción:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditGroupDescription, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                            <Expander Header="Administrar Páginas Asignadas" FontWeight="SemiBold" IsExpanded="True">
                                <Border BorderBrush="#DDDFE2" BorderThickness="1" CornerRadius="3" MaxHeight="200" Margin="0,10,0,0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">

                                        <ItemsControl x:Name="PagesChecklist" ItemsSource="{Binding AllPagesChecklist}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="10,5" Tag="{Binding DataContext, ElementName=PagesChecklist}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <CheckBox Content="{Binding Page.page_name}" IsChecked="{Binding IsSelected}"/>

                                                        <Path Grid.Column="1" Data="{StaticResource pinned}" Fill="Black" 
                                                              Width="15" Height="15" Stretch="Uniform"
                                                              VerticalAlignment="Center" Margin="5,0,0,0">
                                                            <Path.Style>
                                                                <Style TargetType="Path">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsPinnedInGroup}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Path.Style>
                                                        </Path>

                                                        <Grid.ContextMenu>
                                                            <ContextMenu>
                                                                <MenuItem Command="{Binding PlacementTarget.Tag.TogglePinPageInGroupCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                                          CommandParameter="{Binding}">
                                                                    <MenuItem.Style>
                                                                        <Style TargetType="MenuItem">
                                                                            <Setter Property="Header" Value="Fijar en Grupo"/>
                                                                            <Setter Property="IsEnabled" Value="{Binding IsSelected}"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsPinnedInGroup}" Value="True">
                                                                                    <Setter Property="Header" Value="Quitar Fijado"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </MenuItem.Style>
                                                                </MenuItem>
                                                            </ContextMenu>
                                                        </Grid.ContextMenu>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Expander>
                            <CheckBox IsChecked="{Binding EditGroupIsPinned}" Content="Fijar Grupo" FontWeight="SemiBold" Margin="0,15,0,0" Style="{StaticResource ToggleSwitchStyle}"/>
                            <Button Command="{Binding UpdateGroupCommand}" Content="Actualizar Grupo" Style="{StaticResource PrimaryButtonStyle}" Padding="10,5" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Grid Visibility="{Binding IsPageSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <TextBlock Text="Editar Página" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1C1E21"/>
                            <TextBlock Text="Nombre de la Página:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditPageName, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"/>
                            <TextBlock Text="Descripción:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditPageDescription, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}" Height="80" TextWrapping="Wrap"/>
                            <TextBlock Text="URL:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EditPageUrl, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"/>

                            <CheckBox IsChecked="{Binding EditRequiresProxy}" Content="Requiere Proxy" FontWeight="SemiBold" Margin="0,0,0,10" Style="{StaticResource ToggleSwitchStyle}"/>
                            <CheckBox x:Name="chkEditRequiresLogin" IsChecked="{Binding EditRequiresLogin}" Content="Requiere Login" FontWeight="SemiBold" Margin="0,0,0,10" Style="{StaticResource ToggleSwitchStyle}"/>

                            <CheckBox IsChecked="{Binding EditRequiresCustomLogin}" Content="Requiere Custom Login" FontWeight="SemiBold" Margin="0,0,0,10" Style="{StaticResource ToggleSwitchStyle}"/>
                            <StackPanel Visibility="{Binding IsChecked, ElementName=chkEditRequiresLogin, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,10,0,10" Padding="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Usuario:" FontWeight="SemiBold" Margin="0,5,0,5"/>
                                        <TextBox Text="{Binding EditCredentialUsername, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"/>
                                        <TextBlock Text="Contraseña:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding EditCredentialPassword, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <Button Command="{Binding UpdatePageCommand}" Content="Actualizar Página" Style="{StaticResource PrimaryButtonStyle}" Padding="10,5" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>