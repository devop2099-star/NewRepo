<UserControl x:Class="Naviguard.Views.EditGroups"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Naviguard.Views"
             xmlns:vm="clr-namespace:Naviguard.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.DataContext>
        <vm:EditGroupsViewModel/>
    </UserControl.DataContext>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="280"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1.5*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="30" Padding="20" Effect="{DynamicResource ShadowEffect}">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Grupos Existentes" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#1C1E21"/>

                <TextBox DockPanel.Dock="Top" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Buscar grupo..." Style="{StaticResource RoundedTextBoxStyle}" Padding="5" Margin="0,0,0,10"/>

                <ListBox ItemsSource="{Binding FilteredGroups}"
                         SelectedItem="{Binding SelectedGroup}"
                         BorderThickness="0"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding group_name}" Padding="8,5" FontSize="14"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="30" Padding="20" Effect="{DynamicResource ShadowEffect}">
            <Grid Visibility="{Binding IsGroupSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Editar Grupo" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1C1E21"/>

                    <TextBlock Text="Nombre del Grupo:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditGroupName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"/>

                    <TextBlock Text="Descripción:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditGroupDescription, UpdateSourceTrigger=PropertyChanged}"
                             Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <Expander Header="Administrar Páginas Asignadas" FontWeight="SemiBold" IsExpanded="True">
                        <Border BorderBrush="#DDDFE2" BorderThickness="1" CornerRadius="3" MaxHeight="200" Margin="0,10,0,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding AllPagesChecklist}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Page.page_name}" 
                                                      IsChecked="{Binding IsSelected}" 
                                                      Margin="10,5"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Expander>
                    
                    <CheckBox IsChecked="{Binding EditGroupIsPinned}" 
                              Content="Fijar Grupo" 
                              FontWeight="SemiBold" 
                              Margin="0,15,0,0" 
                              Style="{StaticResource ToggleSwitchStyle}"/>
                    
                    <Button Command="{Binding UpdateGroupCommand}" Content="Actualizar Grupo" 
                            Style="{StaticResource PrimaryButtonStyle}" Padding="10,5" 
                            HorizontalAlignment="Left" Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>