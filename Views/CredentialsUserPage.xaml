<Window x:Class="Naviguard.Views.CredentialsUserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Naviguard.ViewModels"
        mc:Ignorable="d"
        Title="Credentials"
        Width="650" Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=vm:CredentialsUserPageViewModel}">

    <Grid Background="Transparent">
        <Border CornerRadius="40" Background="White" SnapsToDevicePixels="True" Effect="{DynamicResource ShadowEffect}" Margin="5"/>

        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="3" FontSize="22" FontWeight="Bold" Foreground="#1C1E21" Margin="10,0,0,20">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Asignar Credenciales a: {0}">
                        <Binding Path="AssignedUserFullName"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,0,10,0">
                <TextBlock Text="Usuario:" FontWeight="SemiBold" Margin="0,0,0,5"
                           IsEnabled="{Binding IsPageSelected}"/>
                <TextBox Text="{Binding CredentialUsername, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,15" Style="{StaticResource RoundedTextBoxStyle}"
                         IsEnabled="{Binding IsPageSelected}"/>

                <TextBlock Text="Contraseña:" FontWeight="SemiBold" Margin="0,0,0,5"
                           IsEnabled="{Binding IsPageSelected}"/>
                <TextBox Text="{Binding CredentialPassword, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,20" Style="{StaticResource RoundedTextBoxStyle}"
                         IsEnabled="{Binding IsPageSelected}"/>

                <Button Content="Guardar Credenciales"
                        Command="{Binding SaveCredentialsCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Left"
                        Padding="15,8"/>
            </StackPanel>

            <Grid Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Páginas: " FontSize="16" FontWeight="Bold" Foreground="#1C1E21" Margin="0,0,0,10"/>

                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="8">
                    <ListBox ItemsSource="{Binding CustomLoginPages}"
                             SelectedItem="{Binding SelectedPage, Mode=TwoWay}"
                             BorderThickness="0" Background="Transparent"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,6" Cursor="Hand">
                                    <TextBlock Text="{Binding page_name}" FontWeight="SemiBold" Foreground="#2D3748"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>
        </Grid>

        <Button x:Name="btnClose"
                Width="18" Height="18"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,15,30,0" Background="#272f3d"
                Cursor="Hand" Click="btnClose_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <Path Data="{StaticResource Cancel}" Width="8" Height="8" Fill="White" Stretch="Uniform"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#CC0000"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#990000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>