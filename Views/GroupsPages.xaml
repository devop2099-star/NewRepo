<UserControl x:Class="Naviguard.Views.GroupsPages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Naviguard.Views"
             xmlns:vm="clr-namespace:Naviguard.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White">

    <UserControl.DataContext>
        <vm:GroupsPagesViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="GroupCardStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding Grupos}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="20" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.OpenGroupCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Margin="15"
                            Style="{StaticResource GroupCardStyle}">

                        <Button.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CornerEllipse" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="3.5" Duration="0:0:0.45" />
                                        <DoubleAnimation Storyboard.TargetName="CornerEllipse" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="3.5" Duration="0:0:0.45" />
                                        <ColorAnimation Storyboard.TargetName="TitleText" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="White" Duration="0:0:0.35" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CornerEllipse" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.45" />
                                        <DoubleAnimation Storyboard.TargetName="CornerEllipse" Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.45" />
                                        <ColorAnimation Storyboard.TargetName="TitleText" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="Black" Duration="0:0:0.35" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>

                        <Border Width="240" Height="140"
                                Background="White" CornerRadius="16">
                            <Border.Effect>
                                <DropShadowEffect Color="#444444" BlurRadius="20" ShadowDepth="0" Opacity="0.15"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.Clip>
                                    <RectangleGeometry Rect="0,0,240,140" RadiusX="16" RadiusY="16"/>
                                </Grid.Clip>

                                <Ellipse x:Name="CornerEllipse" Width="110" Height="110"
                                         HorizontalAlignment="Right" VerticalAlignment="Top"
                                         Margin="0,-55,-55,0" RenderTransformOrigin="1,0">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush GradientOrigin="0.3,1.07" Center="0.5,0.5" RadiusX="0.9" RadiusY="0.9">
                                            <GradientStop Color="#01080d" Offset="0.0"/>
                                            <GradientStop Color="#2e343c" Offset="0.6"/>
                                            <GradientStop Color="#4b5763" Offset="1.0"/>
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                    <Ellipse.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>

                                <TextBlock x:Name="TitleText" Text="{Binding group_name}"
                                           FontSize="20" FontWeight="Medium" TextWrapping="Wrap"
                                           TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Margin="20,10">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="Black"/>
                                    </TextBlock.Foreground>
                                </TextBlock>

                                <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                                        Click="InfoButton_Click"
                                        Style="{StaticResource InfoButtonStyle}">
                                    <Button.ContextMenu>
                                        <ContextMenu OverridesDefaultStyle="True">
                                            <ContextMenu.Template>
                                                <ControlTemplate TargetType="ContextMenu">
                                                    <Border Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="8" Effect="{StaticResource LightShadow}">
                                                        <ItemsPresenter/>
                                                    </Border>
                                                </ControlTemplate>
                                            </ContextMenu.Template>
                                            <TextBlock Text="{Binding description}" MaxWidth="250" TextWrapping="Wrap" Padding="8,5" Foreground="#333333" />
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>

                                <Path Data="{StaticResource pinned}" Fill="White" 
                                      Width="16" Height="16" Stretch="Uniform"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15">
                                    <Path.Style>
                                        <Style TargetType="Path">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding pin}" Value="1">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Path.Style>
                                </Path>
                            </Grid>
                        </Border>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>