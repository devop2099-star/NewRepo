<UserControl x:Class="Naviguard.Views.GroupsPages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Naviguard.Views"
             xmlns:vm="clr-namespace:Naviguard.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F7F9FC">

    <UserControl.DataContext>
        <vm:GroupsPagesViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding Grupos}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Margin="20" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.OpenGroupCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Width="240" Height="140" Margin="15"
                            Style="{StaticResource PanelButtonStyle}">
                        <Grid>
                            <TextBlock Text="{Binding group_name}" 
                                       FontSize="20" FontWeight="Medium" TextWrapping="Wrap"
                                       TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Margin="20,10"/>
                            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                                    Click="InfoButton_Click"
                                    Style="{StaticResource InfoButtonStyle}">
                                <Button.ContextMenu>
                                    <ContextMenu OverridesDefaultStyle="True">
                                        <ContextMenu.Template>
                                            <ControlTemplate TargetType="ContextMenu">
                                                <Border Background="White"
                                                        BorderBrush="#DDDDDD"
                                                        BorderThickness="1"
                                                        CornerRadius="8"
                                                        Effect="{StaticResource LightShadow}">
                                                    <ItemsPresenter/>
                                                </Border>
                                            </ControlTemplate>
                                        </ContextMenu.Template>

                                        <TextBlock Text="{Binding description}" MaxWidth="250" TextWrapping="Wrap" Padding="8,5" Foreground="#333333" />

                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </Grid>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>