<Window x:Class="Naviguard.Login.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Naviguard.Login"
        mc:Ignorable="d"
        Title="Login"
        Width="800" Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Transparent">
        <Border CornerRadius="40" Background="White" SnapsToDevicePixels="True"  Effect="{DynamicResource LightShadow}" Margin="5"/>

        <Button x:Name="btnClose"
    Width="18" Height="18"
    HorizontalAlignment="Right"
    VerticalAlignment="Top"
    Margin="0,15,30,0"
    Background="#272f3d"
    Foreground="White"
    FontSize="14"
    Cursor="Hand"
    Click="btnClose_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                CornerRadius="12"
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}">
                        <Path Data="{StaticResource Cancel}" 
                  Width="8" Height="8"
                  Fill="White"
                  Stretch="Uniform"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#CC0000"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#990000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Border Width="160"
               Height="40"
               Background="#0f1217"
               CornerRadius="0 20 20 0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="5,37,0,0">
            <TextBlock Text="Nx Sphere"
          Foreground="White"
          FontSize="20"
          FontWeight="Bold"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"/>
        </Border>

        <!-- Formulario centrado -->
        <StackPanel Width="250"
       HorizontalAlignment="Center"
       VerticalAlignment="Center">

            <TextBlock Text="Sign In"
          FontSize="22"
          FontWeight="Bold"
          Foreground="#3a3f47"
          Margin="0 0 0 20"
          HorizontalAlignment="Center"/>

            <!-- Usuario -->
            <Grid Margin="0 0 0 10">
                <Border x:Name="borderUsername"
           CornerRadius="14"
           Background="White"
           BorderThickness="1"
           BorderBrush="#CCCCCC">
                    <TextBox x:Name="txtUsername"
                Height="28"
                VerticalContentAlignment="Center"
                Padding="10,0,0,0"
                Foreground="#3a3f47"
                Background="Transparent"
                BorderThickness="0"
                TextChanged="txtUsername_TextChanged"
                GotFocus="txtUsername_GotFocus"
                LostFocus="txtUsername_LostFocus"/>
                </Border>
                <TextBlock x:Name="placeholderUsername"
              Text="Usuario"
              Foreground="Gray"
              Margin="15,0,0,0"
              VerticalAlignment="Center"
              IsHitTestVisible="False"
              FontSize="13"/>
            </Grid>

            <!-- Contraseña -->
            <Grid Margin="0 0 0 20">
                <Border x:Name="borderPassword"
           CornerRadius="14"
           Background="White"  
           BorderThickness="1"
           BorderBrush="#CCCCCC">
                    <PasswordBox x:Name="txtPassword"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Padding="10,0,0,0"
                    Foreground="#3a3f47"
                    Background="Transparent"
                    BorderThickness="0"
                    PasswordChanged="txtPassword_PasswordChanged"
                    GotFocus="txtPassword_GotFocus"
                    LostFocus="txtPassword_LostFocus"/>
                </Border>
                <TextBlock x:Name="placeholderPassword"
              Text="Contraseña"
              Foreground="Gray"
              Margin="15,0,0,0"
              VerticalAlignment="Center"
              IsHitTestVisible="False"
              FontSize="13"/>
            </Grid>

            <!-- Botón -->
            <Button x:Name="btnLogin"
       Content="Ingresar"
       Width="100" Height="32"
       FontSize="13"
       Background="#0f1217"
       Foreground="White"
       BorderBrush="#0f1217"
       BorderThickness="0"
       Cursor="Hand"
       Click="Login_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                   Background="{TemplateBinding Background}"
                   CornerRadius="16"
                   BorderBrush="{TemplateBinding BorderBrush}"
                   BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#50555e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2c2f34"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
