<UserControl x:Class="Naviguard.Control.TopBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             x:Name="TopBar"
             Width="Auto" Height="35"
             MouseEnter="TopBar_MouseEnter"
             MouseLeave="TopBar_MouseLeave"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <PathGeometry x:Key="MaximizeIconData">M0,0 H10 V10 H0 Z</PathGeometry>
        <PathGeometry x:Key="CloseIconData">M0,0 L12,12 M12,0 L0,12</PathGeometry>

        <Style x:Key="TopBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="backgroundBorder" Background="Transparent" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="backgroundBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#40FFFFFF" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="backgroundBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="Transparent" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="ExpandStoryboard">
            <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Width" From="20" To="110" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Height" From="20" To="30" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="ButtonPanel" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2" BeginTime="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="CollapseStoryboard">
            <DoubleAnimation Storyboard.TargetName="ButtonPanel" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Width" From="110" To="20" Duration="0:0:0.3" BeginTime="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Height" From="30" To="20" Duration="0:0:0.3" BeginTime="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleX" To="0.95" Duration="0:0:0.3" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleY" To="0.95" Duration="0:0:0.3" BeginTime="0:0:0.1">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="MainBorder" Width="15" Height="15" Background="#444444" CornerRadius="16"
            SnapsToDevicePixels="True" UseLayoutRounding="True" ClipToBounds="True"
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,15,0" RenderTransformOrigin="1,0.5">
        <Border.RenderTransform>
            <ScaleTransform x:Name="Scale" ScaleX="0.95" ScaleY="0.95"/>
        </Border.RenderTransform>

        <Grid x:Name="ButtonPanel" Opacity="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    ToolTip="Minimizar" 
                    Click="Minimize_Click" 
                    Style="{StaticResource TopBarButtonStyle}"
                    Content="-"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    Margin="0,-2,0,0"/>

            <Button Grid.Column="1" ToolTip="Maximizar" Click="Maximize_Click" Style="{StaticResource TopBarButtonStyle}">
                <Path Data="{StaticResource MaximizeIconData}"
                      Stroke="White"
                      StrokeThickness="1.5"
                      Width="10" Height="10"
                      Stretch="Uniform"/>
            </Button>

            <Button Grid.Column="2" ToolTip="Cerrar" Click="Close_Click" Style="{StaticResource TopBarButtonStyle}">
                <Path Data="{StaticResource CloseIconData}"
                      Stroke="White"
                      StrokeThickness="1.5"
                      Width="12" Height="12"
                      Stretch="Uniform"/>
            </Button>

        </Grid>
    </Border>
</UserControl>